<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPaddingBottom="8dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:contentPaddingTop="16dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    >


    <RelativeLayout
        android:id="@+id/relativeLayoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <TextView
            android:id="@+id/textViewProductListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Teste teste teste"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:transitionName="nameTrans"

            />

        <TextView
            android:id="@+id/textViewProductListValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewProductListName"
            android:text="Teste teste teste"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:transitionName="valueTrans"

            />

        <ImageView
            android:id="@+id/imageViewProductListImage"
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:layout_alignParentRight="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_image_photo"
            android:transitionName="imageTrans" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/imageViewProductListImage"
            >

            <TextView
                android:id="@+id/textViewProductListEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="20dp"
                android:padding="8dp"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/textViewProductListRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="8dp"
                android:text="Remove"
                android:textColor="@color/colorAccent"
                />


        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>